<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ticket_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.duosoft.duocrmtest.activity.TicketDetailsActivity"
    tools:showIn="@layout/activity_ticket_details">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ticket_item_shape">

            <TextView
                android:id="@+id/txtSubjectLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Subject"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDetailsSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />


            <TextView
                android:id="@+id/txtStatusLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtSubjectLeft"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Status"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDetailsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtDetailsSubject"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtDetailsSubject"
                android:layout_below="@+id/txtDetailsSubject"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtPriorityLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtStatusLeft"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Priority"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDetailsPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtDetailsStatus"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtDetailsStatus"
                android:layout_below="@+id/txtDetailsStatus"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtTypeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtPriorityLeft"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Type"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDetailsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtDetailsPriority"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtDetailsPriority"
                android:layout_below="@+id/txtDetailsPriority"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtReferenceLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtTypeLeft"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Reference"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDetailsReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtDetailsPriority"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtDetailsPriority"
                android:layout_below="@+id/txtDetailsType"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDescriptionLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtReferenceLeft"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtDetailsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtDetailsReference"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtDetailsReference"
                android:layout_below="@+id/txtDetailsReference"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/txtDescriptionLeft"
                android:paddingLeft="120dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
