<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnPaper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ticket_item_shape">

            <TextView
                android:id="@+id/txtSubjectLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Subject"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Promotion list requested"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />


            <TextView
                android:id="@+id/txtStatusLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtSubjectLeft"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Status"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtSubject"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="New"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtPriorityLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtStatusLeft"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Priority"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtStatus"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtStatus"
                android:layout_below="@+id/txtStatus"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Normal"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtTypeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtPriorityLeft"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Type"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtPriority"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtPriority"
                android:layout_below="@+id/txtPriority"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Question"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_ticket_text" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>


